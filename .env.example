# Shopify API Configuration
SHOPIFY_SHOP_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxx

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID=xxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxx

# Google Service Account (for Drive cache)
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_PROJECT_ID=your-project-id

# Slack Integration
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxx-xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx
# Production orders (PO created, delivery, cancelled)
SLACK_CHANNEL_PRODUCTION=C0XXXXXXXXX
# Transfers (in transit, delivery, cancelled)
SLACK_CHANNEL_INCOMING=C0XXXXXXXXX
# Low stock alerts (from refresh/cron)
SLACK_CHANNEL_ALERTS=C0XXXXXXXXX

# Auth Configuration
# Write access - can create/edit transfers, production orders, submit inventory counts
ALLOWED_EMAILS=user1@example.com,user2@example.com
# Read-only access - can view all data but cannot make changes
ALLOWED_EMAILS_READONLY=readonly1@example.com,readonly2@example.com

# NextAuth
AUTH_SECRET=generate-a-random-secret-here
AUTH_URL=http://localhost:3000

# Vercel Cron Secret (auto-generated by Vercel, or set manually)
CRON_SECRET=generate-a-random-secret-here
